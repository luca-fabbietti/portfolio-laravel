#!/usr/bin/env bash

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

# Ensure bind-mounted writable paths are accessible by the runtime user.
# SQLite sessions need write access to the database directory, not only the file.
for path in /var/www/html/storage /var/www/html/bootstrap/cache /var/www/html/database; do
    if [ -d "$path" ]; then
        chmod -R ugo+rwX "$path"
    fi
done

if [ -f /var/www/html/database/database.sqlite ]; then
    chmod ugo+rw /var/www/html/database/database.sqlite
fi

if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
